<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Tendable.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?colorText</item>
        <item name="strokeColor">?colorStrokeButton</item>
        <item name="strokeWidth">@dimen/width_stroke</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
        <item name="android:width">@dimen/width_button</item>
    </style>

    <style name="Tendable.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?colorText</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Tendable.TextView.Title" parent="Tendable.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Tendable.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">@dimen/width_input_layout</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Tendable.InputLayout.Theme">
        <item name="colorPrimary">?colorStrokeButton</item>
    </style>
</resources>